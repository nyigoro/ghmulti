{
    "name": "ghmulti-vscode",
    "displayName": "ghmulti",
    "description": "Switch GitHub identities in VS Code using ghmulti.",
    "version": "0.1.0",
    "publisher": "nyigoro",
    "license": "MIT",
    "engines": {
        "vscode": "^1.87.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nyigoro/ghmulti.git"
    },
    "bugs": {
        "url": "https://github.com/nyigoro/ghmulti/issues"
    },
    "homepage": "https://github.com/nyigoro/ghmulti/tree/main/vscode-extension",
    "icon": "assets/icon.png",
    "keywords": [
        "github",
        "git",
        "accounts",
        "identity",
        "ghmulti"
    ],
    "categories": [
        "Source Control",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ghmulti-vscode.manage",
                "title": "ghmulti: Open Menu"
            },
            {
                "command": "ghmulti-vscode.addAccount",
                "title": "ghmulti: Add Account"
            },
            {
                "command": "ghmulti-vscode.switchAccount",
                "title": "ghmulti: Switch Account"
            },
            {
                "command": "ghmulti-vscode.linkAccount",
                "title": "ghmulti: Link Account to Repository"
            },
            {
                "command": "ghmulti-vscode.unlinkAccount",
                "title": "ghmulti: Unlink Repository Account"
            },
            {
                "command": "ghmulti-vscode.showStatus",
                "title": "ghmulti: Show Status"
            },
            {
                "command": "ghmulti-vscode.runDoctor",
                "title": "ghmulti: Run Doctor"
            }
        ],
        "configuration": {
            "title": "ghmulti",
            "properties": {
                "ghmulti.commandPath": {
                    "type": "string",
                    "default": "",
                    "description": "Optional absolute path to the ghmulti executable. Leave empty for auto-detection."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "node ./out/test/runTest.js",
        "package": "npx @vscode/vsce package",
        "publish:vsce": "npx @vscode/vsce publish"
    },
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.87.0",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^9.31.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.3.0",
        "mocha": "^10.8.2",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.38.0"
    }
}
